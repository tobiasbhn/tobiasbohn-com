<%= render 'default/shared/snake_background' do %>

  <section class="<%= center_div_classes %> px-3 tb-content mb-40 flex flex-col">
    <h1 class="order-3 !mb-1"><%= current_page.title %></h1>
    <h2 class="order-4 !mb-10"><%= content :home_heading %></h2>
    <p class="order-5 mb-4">
      <%= I18n.t('home.alright') %>
      <span class="fill-name"></span>
      &ndash;&nbsp;<%= content :home_text %>
    </p>
    <%= content.image_tag :thumbnail, { loader: { page: nil } }, { class: "order-6 #{img_classes}" } %>


    <p class="order-1 mb-4 text-4xl sm:!text-6xl">
      <span class="whitespace-nowrap inline-block w-full overflow-hidden p-px" aria-hidden="true">
        Hey <input type="text" id="snakeNameInput" class="h-[1em]" title="<%= I18n.t('home.name_query') %>" placeholder="<%= I18n.t('home.name_query') %>">,
      </span><br>
      <%= content :home_welcome %>
    </p>
    <p class="order-2 mb-60 whitespace-nowrap flex items-center">
      <span class="sr-only"><%= I18n.t('home.arrow_keys') %>&nbsp;</span>
      <span class="bg-gray-900" aria-hidden="true"><%= render 'shared/icons/arrow-sm-up' %></span>&nbsp;
      <span class="bg-gray-900" aria-hidden="true"><%= render 'shared/icons/arrow-sm-right' %></span>&nbsp;
      <span class="bg-gray-900" aria-hidden="true"><%= render 'shared/icons/arrow-sm-down' %></span>&nbsp;
      <span class="bg-gray-900" aria-hidden="true"><%= render 'shared/icons/arrow-sm-left' %></span>&nbsp;
      <%= I18n.t('home.or') %>&nbsp;
      <span class="bg-gray-900 font-sans h-5 w-5 text-center align-middle text-xs leading-5">W</span>&nbsp;
      <span class="bg-gray-900 font-sans h-5 w-5 text-center align-middle text-xs leading-5">A</span>&nbsp;
      <span class="bg-gray-900 font-sans h-5 w-5 text-center align-middle text-xs leading-5">S</span>&nbsp;
      <span class="bg-gray-900 font-sans h-5 w-5 text-center align-middle text-xs leading-5">D</span>&nbsp;
      <%= I18n.t('home.for_snake') %>
    </p>
  </section>

  <%= render 'default/shared/sections_repeater' %>

<% end %>
